{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "./index.js",
    "./index.d.ts"
  ]
}
